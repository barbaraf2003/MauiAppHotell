<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource PrimaryDark}">
    <VerticalStackLayout>
        <Label 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Padding="30"/>

        <Label Text="Sobre"
               FontFamily="EnglebertRegular"
               FontSize="45"
               TextColor="{StaticResource Black}"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <Label Text="Este aplicativo foi desenvolvido para facilitar o processo de reserva de hospedagem."
               FontFamily="EnglebertRegular"
               FontSize="Small"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray900}" />

        <VerticalStackLayout Spacing="6" Margin="0,15,0,0">
            <Label Text="Desenvolvedor:"
                   FontFamily="EnglebertRegular"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray900}"/>
            <Label Text="Barbara Fabiola Gonçalves Silva"
                   FontFamily="EnglebertRegular"
                   FontSize="20"
                    HorizontalOptions="Center"
                   TextColor="{StaticResource Gray100}"/>
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="6" Margin="0,15,0,0">
            <Label Text="Desenvolvido em:" 
                   FontFamily="EnglebertRegular"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray900}"/>
            <Label Text="2025" 
                   FontFamily="EnglebertRegular"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray100}"/>
        </VerticalStackLayout>

        <Label Text="Versão 1.0"
               FontSize="Small"
               Margin="0, 30, 0, 0"
               TextColor="{StaticResource Gray500}"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
